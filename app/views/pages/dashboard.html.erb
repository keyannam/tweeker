<h1>Welcome To Tweeker<br/><small>Get the latest tweeks at your fingertips</small></h1>

<p>Hey <%= @current_user.username %></p>
<br/>
<h4>People You Follow</h4>
    <ul>
      <% @current_user.following_users.each do |user| %>
        <li><%= user.username %></li>
      <% end %>
    </ul>
  <h4>Other People You Might Find Interesting</h4>
    <ul>
      <% @users.each do |user| %>
        <li><%= user.username %>
            <% if @current_user.following? user %>
                Follows!
                <%= link_to "Unfollow", unfollow_path(:id user.id), method: :delete %>
            <% else %>
              <%= link_to "Follow this user", follow_path(id: user.id), method: :post %>
          <% end %>
        </li>
      <% end %>
    </ul>
